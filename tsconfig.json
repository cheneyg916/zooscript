{
  "compilerOptions": {
    "allowJs": true,
    "target": "ES5",
    "module": "ESNext",
    "moduleResolution": "node",
    "declaration": true,
    "sourceMap": true,
    "outDir": "dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["packages/*/src/**/*"],
  "exclude": ["dist"]
}
